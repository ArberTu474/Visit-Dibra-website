---
// Components
import Button from '../components/ui/general/Button.astro'
import Card from '../components/ui/general/Card.astro'

// Styles
import '../base.css'
import { Icon } from 'astro-iconify'
---

<html class='h-full' lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <link rel='icon' href='/favicon.svg' />
    <link
      href='https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap'
      rel='stylesheet'
    />
    <title>Success</title>
  </head>

  <body class='h-full'>
    <main class='h-full w-screen flex justify-center items-center flex-col'>
      <Card className='mx-10'>
        <div class='max-w-[380px]'>
          <h1 class='text-2xl font-bold text-gray-700'>Thank You!</h1>
          <p class='my-3 text-base'>Your form submission has been received.</p>
          <Button href='/' className='flex items-center'>
            <Icon
              name='ic:round-keyboard-arrow-left'
              class='h-7 text-gray-100 -ml-4'
            />
            Go Back
          </Button>
        </div>
      </Card>
    </main>
  </body>
</html>
