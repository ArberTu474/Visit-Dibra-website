          format='avif'
        />
      </div>

      <!-- Hotel Info section -->
      <div class='flex flex-col gap-6'>
        <div
          class='flex flex-col md:flex-row items-start justify-between md:items-center gap-6 md:gap-1 w-full'
        >
          <div>
            <Stars rating={rating} />
            <h1 class='text-3xl font-bold my-1'>{name}</h1>
            <a
              href={location_url}
