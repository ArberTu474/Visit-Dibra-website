---
// Layouts
import Layout from './Layout.astro'

// Componets
import { Image } from '@astrojs/image/components'

// Function
import { formatDate } from '../functions/utils.js'

const { frontmatter } = Astro.props
const { title, description, summary, img_src, img_alt, date, tags } =
  frontmatter
---

<Layout title={title} description={description}>
  <div class='pt-8'>
    <article
      class='page-container max-w-7xl prose prose-p:text-justify prose-sky md:prose-h1:mt-8 prose-img:m-0 grid grid-cols-1 md:grid-cols-3 gap-y-12 md:gap-x-12'
    >
      <div class='col-span-2 h-52 md:h-80'>
        <Image
          class='w-full h-full object-cover rounded-lg bg-gray-300'
          src={img_src}
          height={600}
          aspectRatio='4:3'
          alt={img_alt}
          format='avif'
        />
        {
          date && (
            <div class='flex gap-2 items-center opacity-80 mt-3'>
              <img
                src='/icons/date_icon.svg'
                alt=''
                height='28px'
                width='28px'
              />
              <p class='text-base text-gray-500 m-0'>{`Date: ${formatDate(
                date
              )}`}</p>
            </div>
          )
        }
      </div>
      <!-- Summary & Tags column -->

      <div class='col-start-1 md:col-start-3 md:row-span-2'>
        <div class='md:sticky top-24'>
          <!-- Summary -->
          {
            summary && (
              <>
                <div>
                  <h2 class='text-xl font-bold my-5'>Summary</h2>
                  <ul class='list-disc'>
                    {summary.map((e) => (
                      <li>
                        <a href={`#${e.toLowerCase().replaceAll(' ', '-')}`}>
                          {e}
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
                <div class='hidden md:block h-[1px] w-full bg-gray-300 rounded-full' />
              </>
            )
          }

          <!-- Tags -->
          {
            tags && (
              <div class='mb-3'>
                <h2 class='text-xl font-bold my-5'>Tags</h2>
                {tags &&
                  tags.map((tag) => (
                    <a
                      href={`/tags/${tag}`}
                      class='no-underline mr-2 mb-2 inline-block px-4 py-1 bg-gray-400/20 hover:bg-gray-400/30 text-gray-600/80 rounded-full'
                    >
                      {tag}
                    </a>
                  ))}
              </div>
            )
          }
        </div>

        <!-- Horizontal Spacer Mobile-->
        <div class='md:hidden h-[1px] w-full bg-gray-300 rounded-full'></div>

        <div></div>
      </div>

      <!-- Article Coulumn -->
      <div class='col-start-1 md:col-span-2'>
        <slot />
      </div>
    </article>
  </div>
</Layout>
