---
// Components
import Navbar from '../components/ui/general/Navbar.astro'
import Footer from '../components/ui/general/Footer.astro'

// Styles
import '../base.css'

// Props
export interface Props {
  title: string
  description?: string
  keywords?: string
  page_type?: pageType
  image?: string
}

type pageType = 'website' | 'article' | 'object'

const {
  title,
  description = 'Welcome to Diber',
  page_type,
  image = '/hero_image.avif',
} = Astro.props
---

<!DOCTYPE html>
<html class='h-full' lang='en'>
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src='https://www.googletagmanager.com/gtag/js?id=G-TZT92XTSBB'
    ></script>
    <script>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag('js', new Date())

      gtag('config', 'G-TZT92XTSBB')
    </script>
    <meta charset='UTF-8' />
    <meta name='description' content={description} />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <meta name='generator' content={Astro.generator} />

    <!-- Open Graph protocol -->
    <meta property='og:title' content={title} />
    <meta property='og:description' content={description} />
    <meta property='og:type' content={page_type} />
    <meta property='og:site_name' content='VisitDiber' />
    <meta property='og:image:height' content='600' />
    <meta property='og:image:width' content='1200' />
    <meta
      property='og:image'
      content={`https://visitdibra.netlify.app${image}`}
    />
    <link rel='icon' href='/favicon.svg' />
    <link
      href='https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap'
      rel='stylesheet'
    />
    <title>{title}</title>
  </head>

  <body class='h-full w-full bg-gray-100 flex flex-col'>
    <Navbar />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
