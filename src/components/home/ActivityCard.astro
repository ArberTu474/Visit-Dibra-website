---
// Props
export interface Props {
  activity_name: string
  activity_url: string
  description: string
  className?: string
}
const { activity_name, description, activity_url, className } = Astro.props

// Components
import Card from '../Card.astro'
---

<Card>
  <div class='flex flex-col text-center mb-6'>
    <a
      class='mb-6 hover:scale-105 hover:-translate-y-2 transition-transform duration-300'
      href={activity_url}
    >
      <div class='h-24 flex align-middle'>
        <img
          class='mx-auto'
          src={`/icons/activities/${activity_name}.svg`}
          alt='icon'
          height='70px'
        />
      </div>
      <h2 class='text-xl font-bold mt-2'>
        {activity_name.charAt(0).toUpperCase() + activity_name.slice(1)}
      </h2>
    </a>
    <p class='text-base text-gray-500'>
      {description}
    </p>
  </div>
  <div class='flex flex-col gap-2'>
    <slot />
  </div>
</Card>
