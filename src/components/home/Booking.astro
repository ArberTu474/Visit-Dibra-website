---
// Componets
import { Image } from '@astrojs/image/components'
import SectionContent from '../ui/general/SectionContent.astro'
import Card from '../ui/general/Card.astro'
import Button from '../ui/general/Button.astro'
import BookingContactInfo from '../ui/booking/BookingContactInfo.astro'
import BusinessesContactInfo from '../ui/booking/BusinessesContactInfo.astro'

// Data
import bookingInfo from '../../data/booking/bookingInfo.json'
import { Icon } from 'astro-iconify'
---

<section class='relative'>
  <div class='page-container'>
    <div id='booking'></div>
    <SectionContent
      title='Book your visit to Diber'
      subtitle='Booking'
      icon='calendar-month-outline-rounded'
      section_color='dark-blue'
      text_position='center'
    >
      Choose from several options below to book your stay in Diber!
    </SectionContent>
    <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-12'>
      <!-- Contact the Owner Directly -->
      <Card className='flex flex-col justify-between min-h-[500px]'>
        <div class='text-center'>
          <img
            height='80px'
            width='138px"'
            class='mx-auto'
            src='/icons/booking/direct_contact.svg'
            alt='info icon'
          />
          <h2 class='text-2xl font-bold mt-3 mb-6'>
            Contact the Owner Directly
          </h2>
          <p class='text-base text-gray-600'>
            For direct contact with hospitality owners in Diber, reach out today
            and experience warm hospitality at its best. Enjoy a memorable stay
            with personalized service and comfortable accommodations.
          </p>
        </div>

        <!-- Contact info -->
        <div class='py-6'>
          {
            bookingInfo.businesses.map((busines) => (
              <BusinessesContactInfo
                type={busines.type as any}
                name={busines.name}
                href={busines.url}
                stars={busines.stars}
              />
            ))
          }
        </div>

        <Button
          className='w-full text-gray-100'
          href='/stays'
          rounded={true}
          btnColor='dark-blue'
        >
          More Info
        </Button>
      </Card>

      <!-- Tourism Information Center  -->
      <Card className='flex flex-col justify-between min-h-[500px]'>
        <div class='text-center'>
          <img
            height='80px'
            width='80px"'
            class='mx-auto'
            src='/icons/booking/info.svg'
            alt='info icon'
          />
          <h2 class='text-2xl font-bold mt-3 mb-6'>
            Tourist Information Center
          </h2>
          <p class='text-base text-gray-600'>
            Contact the Diber Tourist Information Center in Peshkopi directly
            with any questions related to travel or staying in Diber.
          </p>
        </div>

        <!-- Contact info -->
        <div class='py-6'>
          {
            bookingInfo.contact.map((contact) => (
              <BookingContactInfo
                type={contact.type}
                contact={contact.contactInfo}
                href={contact.url}
              />
            ))
          }
        </div>

        <Button
          className='w-full text-gray-100'
          href='/'
          rounded={true}
          btnColor='dark-blue'
        >
          More Info
        </Button>
      </Card>

      <!-- Booking.com -->
      <Card className='flex flex-col justify-between min-h-[500px]'>
        <div class='text-center'>
          <img
            height='80px'
            width='80px"'
            class='mx-auto'
            src='/icons/booking/booking_logo.svg'
            alt='booking.com icon'
          />
          <h2 class='text-2xl font-bold mt-3 mb-6'>Booking.com</h2>
          <p class='text-base text-gray-600'>
            Book a stay in Diber directly on Booking.com below.
          </p>
        </div>

        <Button
          className='w-full text-gray-100'
          href='https://booking.com'
          rounded={true}
          btnColor='dark-blue'
          externalLink={true}
        >
          More Info

          <Icon
            class='text-gray-100 h-8'
            name='material-symbols:login-rounded'
          />
        </Button>
      </Card>
    </div>
  </div>
  <!-- Background Image -->
  <Image
    class='bg-icons bottom-0 select-none'
    src='/icons/booking_icon_bg.svg'
    width={539 / 1.3}
    height={1197 / 1.1}
    alt='backgound icon'
    format='svg'
  />
</section>
