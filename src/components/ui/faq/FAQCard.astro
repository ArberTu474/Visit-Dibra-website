---
// Props
export interface Props {
  question: string
  answer: string
}

const { question, answer } = Astro.props

import { Icon } from 'astro-iconify'
// Components
import Card from '../general/Card.astro'
---

<section>
  <Card>
    <div id='question' class='flex justify-between items-center cursor-pointer'>
      <h3 class='text-xl font-bold'>{question}</h3>

      <Icon
        id='arrow'
        class='min-w-[32px] h-8 text-gray-800'
        name='material-symbols:expand-more-rounded'
      />
    </div>
    <div id='answer' class='hidden'>
      <div class='h-[2px] w-full bg-gray-400/40 my-3 rounded-full'></div>
      <p class='text-base text-gray-600'>
        {answer}
      </p>
    </div>
  </Card>
</section>

<script>
  const questions = document.querySelectorAll('#question')

  for (let i = 0; i < questions.length; i++) {
    questions[i].addEventListener('click', function () {
      this.children[1].classList.toggle('rotate-180')
      var content = this.nextElementSibling
      if (content.style.display === 'block') {
        content.style.display = 'none'
      } else {
        content.style.display = 'block'
      }
    })
  }
</script>
