---
import { Icon } from 'astro-iconify'
// Props
export interface Props {
  is_allowed: boolean
  rules_list: Array<string>
}

const { is_allowed, rules_list } = Astro.props

let title = ''
let icon = ''

if (is_allowed === true) {
  title = 'Allowed'
  icon = 'material-symbols:done-rounded'
} else {
  title = 'Not Allowed'
  icon = 'material-symbols:close-rounded'
}
---

<section>
  <h3 class='text-xl font-bold'>{title}</h3>
  <div class='flex flex-col gap-2 mt-3'>
    {
      rules_list.map((rule) => {
        if (rule === '[]') {
          return
        }
        return (
          <div class='flex items-center gap-2'>
            <Icon
              name={icon}
              class={`h-8 w-8 ${
                is_allowed ? 'text-green-500' : 'text-red-500'
              }`}
            />
            <p class='text-gray-600'>{rule}</p>
          </div>
        )
      })
    }
  </div>
</section>
